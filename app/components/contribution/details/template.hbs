<div class='details'>
  <div class='text-center'>
    <h2>{{@contribution.title}}</h2>
    <h3>Owner: {{@contribution.owner.username}}</h3>
    <h4>Deadline: {{this.deadlineFormat}}</h4>
    <h4>Status: {{this.statusOfContribution}}</h4>
  </div>

  <table class='table'>
    <thead>
      <tr>
        <th scope='col'>Username</th>
        <th scope='col'>Amount</th>
        <th scope='col'>Status</th>
        <th scope='col'>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each @contribution.contributors as |contributionUser|}}
        <Contribution::Details::Row
          @contributionUser={{contributionUser}}
          @contribution={{@contribution}}
        />
      {{/each}}
    </tbody>
    <tfoot>
      <tr>
        <th scope='col'>Summary:</th>
        <th scope='col'>{{@contribution.goal}} PLN</th>
        <th scope='col'></th>
        <th scope='col'></th>
      </tr>
    </tfoot>
  </table>
</div>

{{yield}}