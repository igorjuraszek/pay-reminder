<div class='mx-auto w-75 p-3'>

  <div class='card text-center'>
    <div class='card-header'>
      #Group: My contributions
    </div>
    <div class='card-body'>
      <h5 class='card-title'><LinkTo
          @route='home.contribution.show'
          @model={{@contribution}}
        >{{@contribution.title}}</LinkTo></h5>
      <p class='card-text'>Owner: {{@contribution.owner.username}}</p>

      <table class='table'>
        <thead>
          <tr>
            <th scope='col'>Username</th>
            <th scope='col'>Amount</th>
            <th scope='col'>Status</th>
          </tr>
        </thead>
        <tbody>
          {{#each @contribution.contributors as |contribution-user|}}
            <Contributions::List::Contribution::Row
              @contribution-user={{contribution-user}}
            />
          {{/each}}
        </tbody>
        <thead>
          <tr>
            <th scope='col'>Summary:</th>
            <th scope='col'>{{@contribution.goal}} PLN</th>
            <th scope='col'></th>
          </tr>
        </thead>
      </table>
      <LinkTo
        @route='home.contribution.show'
        @model={{@contribution}}
      >details</LinkTo>
    </div>
    <div class='card-footer text-muted'>
      #2 days remaining
    </div>
  </div>
</div>

{{yield}}