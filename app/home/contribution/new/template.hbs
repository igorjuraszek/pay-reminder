{{page-title 'New'}}

<div class='container'>
  <form {{on 'submit' this.onSubmit}}>

    <div class='details'>
      <div class='text-center'>
        <input
          type='text'
          class='form-control'
          id='title'
          placeholder='title'
          {{on 'input' this.onTitleChange}}
        />

        <h3>Owner: {{this.contributionOwner.username}}</h3>
        <h4>Deadline: -</h4>

        <div class='form-check'>
          <input
            class='form-check-input'
            type='checkbox'
            value=''
            id='checkIsPrivate'
            {{on 'change' this.onChangePrivate}}
          />
          <label class='form-check-label' for='flexCheckDefault'>
            Private contribution
          </label>
        </div>
      </div>

      {{! template-lint-disable table-groups }}
      <table class='table'>
        <thead>
          <tr>
            <th scope='col'>Username</th>
            <th scope='col'>Amount</th>
            <th scope='col'></th>
            <th scope='col'>Actions</th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <th scope='col'>
              <PowerSelect
                @searchEnabled={{true}}
                @options={{this.usersToAdd}}
                @matcher={{this.myMatcher}}
                @selected={{this.choosenUser}}
                @onChange={{this.chooseUser}}
                as |user|
              >
                @{{user.username}}
                -
                {{user.name}}
                {{user.surname}}
              </PowerSelect>
            </th>
            <th scope='col'>
              <input
                type='number'
                class='form-control'
                id='amount'
                value={{this.amount}}
                placeholder='amount'
                {{on 'input' this.onAmountChange}}
              /></th>
            <th scope='col'></th>
            <th scope='col'><button
                type='button'
                class='btn btn-success'
                {{on 'click' this.onAddContributor}}
              >Add</button></th>
          </tr>
          <NewContribution::Contributors
            @contribution={{this.currentContribution}}
          />
        </tbody>
        <tfoot>
          <tr>
            <th scope='col'>Summary:</th>
            <th scope='col'>{{this.goalOfContribution}} PLN</th>
            <th scope='col'></th>
            <th scope='col'></th>
          </tr>
        </tfoot>
      </table>
      <button
        type='submit'
        class='btn btn-primary'
        {{on 'click' this.onSubmit}}
      >Create</button>
    </div>
  </form>

</div>

{{outlet}}