{{page-title 'Login'}}
<h1>Login</h1>

<div class='container'>
  <form {{on 'submit' this.onSubmit}}>

    <div class='mb-3 row'>
      <label for='username' class='col-sm-2 col-form-label'>Username</label>
      <div class='col-sm-10'>
        <input
          type='text'
          class='form-control'
          id='username'
          placeholder='username'
          {{on 'input' this.onLoginChange}}
          data-test-username
        />
      </div>
    </div>
    <div class='mb-3 row'>
      <label
        for='inputPassword'
        class='col-sm-2 col-form-label'
      >Password</label>
      <div class='col-sm-10'>
        <input
          type='password'
          class='form-control'
          id='inputPassword'
          placeholder='password'
          {{on 'input' this.onPasswordChange}}
          data-test-password
        />
      </div>
    </div>
    <div class='mb-3 row'>
      <button
        type='submit'
        class='btn btn-primary'
        data-test-submit
      >Login</button>
    </div>
  </form>
  <div>
    <span>Nie mam konta. </span><LinkTo @route='register'>Zarejestruj.</LinkTo>
  </div>
</div>

{{outlet}}